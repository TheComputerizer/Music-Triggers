{
  "schemaVersion": 1,
  "id": "musictriggers",
  "version": "${version}",

  "name": "Music Triggers",
  "description": "Plays customized music based on in game triggers",
  "authors": [
    "The_Computerizer"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/music-triggers"
  },

  "license": "MIT",
  "icon": "assets/musictriggers/textures/logo.png",

  "accessWidener" : "musictriggers.accesswidener",

  "environment": "*",
  "entrypoints": {
    "main": [
      "mods.thecomputerizer.musictriggers.MusicTriggers"
    ],
    "client": [
      "mods.thecomputerizer.musictriggers.MusicTriggersClient"
    ]
  },
  "mixins": [
    "musictriggers.mixin.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.17",
    "fabric": "*",
    "minecraft": "~1.18.2",
    "java": ">=17",
    "theimpossiblelibrary": "*"
  },
  "suggests": {
    "another-mod": "*"
  }
}